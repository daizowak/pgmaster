<!Doctype html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">
    <link rel="shortcut icon" href="${request.static_url('pgmaster:static/pyramid-16x16.png')}">

    <title>PostgreSQL CommitLog Database(Main Page)</title>

    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('pgmaster:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div class="row">
      <div class="col-md-10">
        <div class="content">
          <h2><span class="font-semi-bold">${check}</span></h2>
        </div>
      </div>    
    </div>
    <div>
      <form action="${myself}" method="post">
	<input type="submit" name="branch" value="REL9_4_STABLE"/>
	<input type="submit" name="branch" value="REL9_3_STABLE"/>
	<input type="submit" name="branch" value="REL9_2_STABLE"/>
	<input type="submit" name="branch" value="REL9_1_STABLE"/>
	<input type="submit" name="branch" value="REL9_0_STABLE"/>
	<input type="submit" name="branch" value="REL8_4_STABLE"/>
      </form>
    </div>
    <div>
      <form action="${myself}" method="post">
	<input type="hidden" name="branch" value="${check}"/>
	<input type="date" name="date" value=""/>
	<input type="submit" value="change"/>
      </form>
    </div>
    <div>
      <table class="table">
	<tr>
	<th>コミット日</th><th>短縮コミットID</th><th>重要度</th><th>セキュリティレベル</th><th>概要</th>
	</tr>
	<tal:block repeat="row records">
	  <tr>
	  <td><div tal:content="row.commitdate"/></td>
	  <form action="${detail}" method="post">
	    <input type="hidden" name="branch" value="${check}"/>
	    <input type="hidden" name="commitid" value="${row.commitid}"/>
	    <td><input type="submit" value="${row.scommitid}"/></td>
	  </form>
	  <td><div tal:content="row.buglevel"/></td>
	  <td><div tal:content="row.seclevel"/></td>
	  <td><div tal:content="row.snote"/></td>
	  </tr>
	</tal:block>
      </table>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
