<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">
    <link rel="shortcut icon" href="${request.static_url('pgmaster:static/pyramid-16x16.png')}">

    <title>Pyramid Test Page</title>

    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('pgmaster:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div class="row">
      <div class="col-md-10">
	<div class="content">
          <h2><span class="font-semi-bold">${branch}</span><span class="smaller"> : ${commitid}</span></h2>
	</div>
      </div>
    </div>

    <div>
      <pre>${detail}</pre>
    </div>

    <div>
      <form action="${myself}" method="post">
	<input type="hidden" name="commitid" value="${commitid}"><br/>
	<input type="hidden" name="branch" value="${branch}"><br/>
	LASTUPDATE: ${record.updatetime}<br/><br/>
	revision       <textarea name="revision" tal:content="record.revision" rows="1" cols="10"><br/>
	bug-level      <textarea name="buglevel" tal:content="record.buglevel" rows="1" cols="20"><br/> 
	security-level <textarea name="seclevel" tal:content="record.seclevel" rows="1" cols="10"><br/>
	short note     <textarea name="snote" tal:content="record.snote" rows="1" cols="100"/><br/>
	long note      <textarea name="note" tal:content="record.note" rows="10" cols="100"/><br/>
	url            <textarea name="releurl" tal:content="record.releurl" rows="1" cols="100"/><br/>
        analysys       <textarea name="analysys" tal:content="record.analysys" rows="10" cols="100"/><br/>
	genre          <textarea name="genre" tal:content="record.genre" rows="3" cols="30"/><br/>
	<input type="submit" name="upload" value="Save"/>
      </form>
    </div>


    <div>
      <pre>${diff}</pre>
    </div>

 
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
